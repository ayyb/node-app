<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        .chat-content {
            height: 450px;
            overflow-y: scroll;
            padding: 10px;
        }

        .chat-content li {
            margin-top: 10px;
            list-style: none;
        }

        .text-small {
            font-size: 12px;
            color: gray;
            margin-bottom: 0;
        }

        .chat-box {
            background: #eee;
            padding: 5px;
            border-radius: 5px;
            float: left;
        }

        .mine {
            float: right;
        }
    </style>
</head>

<body>
    <%- include('nav.html') %>
        <div class="container p-4 detail">

            <div class="row">
                <div class="col-3">
                    <ul class="list-group chat-list">
                        <% for (var i=0; i < data.length ; i++){ %>
                            <li class="list-group-item" data-id="<%= data[i]._id %>">
                                <h6>
                                    <%= data[i].title %>
                                </h6>
                                <h6 class="text-small">
                                    <%= data[i].member[0] %>
                                </h6>
                            </li>
                            <% } %>

                                <li class="list-group-item">
                                    <h6>채팅방1</h6>
                                    <h6 class="text-small">채팅방아이디</h6>
                                </li>
                    </ul>
                </div>

                <div class="col-9 p-0">
                    <div class="chat-room">
                        <ul class="list-group chat-content">
                            <li><span class="chat-box">채팅방1 내용</span></li>
                            <li><span class="chat-box">채팅방1 내용</span></li>
                            <li><span class="chat-box mine">채팅방1 내용</span></li>
                        </ul>
                        <div class="input-group">
                            <input class="form-control" id="chat-input">
                            <button class="btn btn-secondary" id="send">전송</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script>
            $('#send').click(function () {
                var contents = $('#chat-input').val();   //1, 2
                var sendData = {
                    parent: clickId,
                    content: contents,
                };

                //3
                $.post('/message', sendData).then((a) => {
                    console.log(a)
                });

            });
            //4
            var clickId;
            var eventSource;   //일단변수 

            $('.list-group-item').click(function () {
                $(this).css('background-color', '#eee');
                clickId = $(this).attr('data-id');
                $('.chat-content').html('')
                //프론트엔드에서 실시간 소통채널 여는법 
                eventSource = new EventSource('/message/' + clickId);
                eventSource.addEventListener('test', function (e) {
                    console.log(e.data);
                    var 가져온거 = JSON.parse(e.data);
                    가져온거.forEach((a) => {
                        $('.chat-content').append(`<li><span class="chat-box">${a.content}</span></li>`)
                    });
                });
            });

        </script>
</body>


</html>